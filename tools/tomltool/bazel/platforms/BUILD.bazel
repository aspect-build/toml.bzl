load("//bazel/platforms/config:defs.bzl", "linker_suffix", "platforms")

[platform(
    name = "{}_{}{}".format(
        p.os,
        p.cpu,
        linker_suffix(
            "_",
            p.libc,
        ),
    ),
    constraint_values = [
        "@platforms//os:{}".format(p.os),
        "@platforms//cpu:{}".format(p.cpu),
        "@//bazel/platforms/libc:{}".format(p.libc),
    ],
    visibility = ["//visibility:public"],
) for p in platforms]
